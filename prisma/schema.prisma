datasource db {
  provider = "postgresql"
  // Connection URLs are no longer supported in schema files.
  // Move the DATABASE_URL (and any other datasource URLs) into prisma.config.ts
  // and configure the PrismaClient with an adapter or accelerateUrl as documented:
  // https://pris.ly/d/config-datasource
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated"

}

model User {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  password        String
  confirmPassword String?
  role            Role     @default(STUDENT)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum Role {
  STUDENT
  TEACHER
}